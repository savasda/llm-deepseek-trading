# ═══════════════════════════════════════════════════════════════
# Exchange Configuration
# ═══════════════════════════════════════════════════════════════

# EXCHANGE: Select which exchange to use ("binance" or "bitget")
# Default: binance
EXCHANGE=binance

# ───────────────────────────────────────────────────────────────
# Binance API Credentials
# ───────────────────────────────────────────────────────────────
BN_API_KEY=your_binance_api_key_here
BN_SECRET=your_binance_api_secret_here
BN_TESTNET=false

# ───────────────────────────────────────────────────────────────
# Bitget API Credentials (used when EXCHANGE=bitget)
# ───────────────────────────────────────────────────────────────
# BITGET_API_KEY=your_bitget_api_key_here
# BITGET_API_SECRET=your_bitget_api_secret_here
# BITGET_PASSPHRASE=your_bitget_passphrase_here
# BITGET_TESTNET=false

# ═══════════════════════════════════════════════════════════════
# LLM Configuration
# ═══════════════════════════════════════════════════════════════

# OpenRouter API for DeepSeek LLM
OPENROUTER_API_KEY=your_openrouter_api_key_here

# LLM Model Selection
# Options: deepseek/deepseek-chat-v3.1, deepseek/deepseek-chat, etc.
TRADEBOT_LLM_MODEL=deepseek/deepseek-chat-v3.1
TRADEBOT_LLM_TEMPERATURE=0.7
TRADEBOT_LLM_MAX_TOKENS=4000

# Optional: Extended thinking budget (JSON format)
# Example: TRADEBOT_LLM_THINKING={"budget_tokens":5000,"type":"enabled"}
# TRADEBOT_LLM_THINKING=

# ═══════════════════════════════════════════════════════════════
# Trading Bot Configuration
# ═══════════════════════════════════════════════════════════════

# Trading Interval (3m, 5m, 15m, 30m, 1h, 4h)
TRADEBOT_INTERVAL=15m

# System Prompt Configuration
# Use either file path or inline prompt (file takes precedence)
TRADEBOT_SYSTEM_PROMPT_FILE=prompts/system_prompt.txt
# TRADEBOT_SYSTEM_PROMPT=Your custom system prompt here

# Paper Trading Capital
PAPER_START_CAPITAL=10000.0

# ═══════════════════════════════════════════════════════════════
# Hyperliquid Live Trading (DANGER: Real Money!)
# ═══════════════════════════════════════════════════════════════

# WARNING: Only enable if you understand the risks
HYPERLIQUID_LIVE_TRADING=false

# Hyperliquid Credentials (for live trading)
# HYPERLIQUID_WALLET_ADDRESS=0x...
# HYPERLIQUID_PRIVATE_KEY=0x...
# HYPERLIQUID_CAPITAL=500.0

# ═══════════════════════════════════════════════════════════════
# Telegram Notifications (Optional)
# ═══════════════════════════════════════════════════════════════

# TELEGRAM_BOT_TOKEN=your_bot_token_here
# TELEGRAM_CHAT_ID=your_chat_id_here
# TELEGRAM_SIGNALS_CHAT_ID=your_signals_chat_id_here

# ═══════════════════════════════════════════════════════════════
# Backtest Configuration
# ═══════════════════════════════════════════════════════════════

# Directory for backtest data (default: data-backtest/)
# BACKTEST_DATA_DIR=data-backtest/

# Backtest time range (ISO 8601 format with timezone)
# BACKTEST_START=2024-01-01T00:00:00Z
# BACKTEST_END=2024-01-07T00:00:00Z

# Backtest interval (default: 15m)
# BACKTEST_INTERVAL=15m

# Backtest starting capital
# BACKTEST_START_CAPITAL=10000.0

# Override LLM settings for backtests (optional)
# BACKTEST_LLM_MODEL=deepseek/deepseek-chat-v3.1
# BACKTEST_TEMPERATURE=0.7
# BACKTEST_MAX_TOKENS=4000

# Override system prompt for backtests (optional)
# BACKTEST_SYSTEM_PROMPT_FILE=prompts/backtest_prompt.txt
# BACKTEST_SYSTEM_PROMPT=

# Disable Telegram during backtests
BACKTEST_DISABLE_TELEGRAM=true

# ═══════════════════════════════════════════════════════════════
# Risk Management
# ═══════════════════════════════════════════════════════════════

# Risk-free rate for Sortino ratio calculation (annualized)
SORTINO_RISK_FREE_RATE=0.0

# ═══════════════════════════════════════════════════════════════
# Data Directory
# ═══════════════════════════════════════════════════════════════

# Directory for live trading data (default: data/)
# TRADEBOT_DATA_DIR=data/
